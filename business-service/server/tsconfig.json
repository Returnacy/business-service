{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
  "types": [],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@business-service/db": ["../db/src/index.ts"]
    },
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "isolatedModules": true
  },
  "include": ["src", "src/types"],
  "exclude": ["dist"],
  "references": [
    { "path": "../db" }
  ]
}